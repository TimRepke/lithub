{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include" : [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude" : [
    "node_modules",
    "tools/**"
  ],
  "compilerOptions" : {
    "baseUrl" : ".",
    "paths" : {
      "@/*" : [
        "./src/*"
      ]
    },
    "lib" : [
      "ES2021",
      "DOM"
    ],
    "target" : "ESNext",
    "module" : "ESNext",
    "strict" : true,
    "noImplicitAny" : true,
    "noImplicitThis" : false,
    "noImplicitReturns" : true,
    "allowSyntheticDefaultImports" : true,
    "forceConsistentCasingInFileNames" : true,
    "useDefineForClassFields" : true,
    "sourceMap" : true
  },
  "references" : [
    {
      "path" : "./tsconfig.config.json"
    }
  ]
}
